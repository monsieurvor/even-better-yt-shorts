{
    "name": "Better YouTube Shorts",
    "description": "Playback, volume controls (with custom keybinds), timestamp, and progress bar seeking on YouTube Shorts.",
    "version": "2.2.1",
    "manifest_version": 3,
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "js": [
                "browser-polyfill.js",
                "content-script.js"
            ],
            "css": ["styles.css"]
        }
    ],
    "icons": {
        "16": "icons/byts16.png",
        "32": "icons/byts32.png",
        "48": "icons/byts48.png",
        "128": "icons/byts128.png"
    }
}